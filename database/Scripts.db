CREATE TABLE `Acusados` (
`cedula` VARCHAR(15) NOT NULL PRIMARY KEY,
  `nombre` VARCHAR(70) NOT NULL,  
  `telefono` VARCHAR(15) NOT NULL
);

CREATE TABLE `Acusaciones` (
	`id` INT AUTO_INCREMENT PRIMARY KEY,
	`cedulaAcusado` VARCHAR(15) NOT NULL,
	`Descripcion` LONGTEXT NOT NULL,
	`Culpable` BOOLEAN NOT NULL,
  FOREIGN KEY (`cedulaAcusado`) REFERENCES `Acusados`(`cedula`) ON UPDATE RESTRICT ON DELETE CASCADE
);

